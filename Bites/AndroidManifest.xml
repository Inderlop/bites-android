<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="captainfanatic.bites">
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.SEND_SMS" />
    <application android:icon="@drawable/icon" 
    	android:label="@string/app_name" >
    	<provider android:name="RecipeBookProvider"
            android:authorities="captainfanatic.provider.RecipeBook" />
        <activity android:name=".Bites" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
    	    	<action android:name="com.captainfanatic.bites.RECEIVED_RECIPE" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
    	<receiver android:name=".SmsReceiver"
    		android:enabled="true">
    		<intent-filter>
				<action
					android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
    	</receiver>
    	<activity android:name=".RecipeList" >
    	</activity>
		<activity android:name=".IngredientList" >
		</activity>
		<activity android:name=".MethodList" >
		</activity>
</application>
</manifest> 